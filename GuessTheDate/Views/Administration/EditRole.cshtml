@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit-Role";
}

<div class="container bg-info text-white p-5 mt-5">
    <h1 class="display-6 text-center">Edit Roles</h1>
    <form method="post">
        <div class="mt-3 mb-3">
            <label asp-for="Id" class="form-label"></label>
            <input type="text" asp-for="Id" class="form-control" readonly/>
        </div>
        <div class="mt-3 mb-3">
            <label asp-for="RoleName" class="form-label"></label>
            <input type="text" asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="mt-3 mb-3">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-action="ListRoles" class="btn btn-danger">Cancel</a>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="text-black card-header">Users in this role:</h6>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <p class="text-black card-text">@user</p>
                    }
                }
                else
                {
                    <p class="text-black">No users in this role yet.</p>
                }
            </div>
            <div class="card-footer">
                <a asp-action="EditUsersInRole" class="btn btn-primary">Edit users in this role</a>
            </div>
        </div>
    </form>
</div>