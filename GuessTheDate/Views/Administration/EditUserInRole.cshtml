@model List<EditUserInRoleViewModel>

@{ 
    ViewBag.Title = "Edit-User-Role";
    var roleId = ViewBag.RoleId;
}

<div class="container bg-info text-center text-white p-5 mt-5">
    <h1 class="display-6">Add or Remove a user from this role:</h1>
    <h3>@roleId</h3>
    <form method="post">
        <div>
            @if (Model.Any())
            {
                <ul class="list-group">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item">
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label asp-for="@Model[i].UserName" class="form-check-label">@Model[i].UserName</label>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <h3 class="display-6">Nessun utente nell'applicazione.</h3>
            }
        </div>
        
        <div class="mt-3 mb-3">
            <button type="submit" class="btn btn-success">Apply Changes</button>
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-warning">Cancel</a>
        </div>
    </form>
</div>