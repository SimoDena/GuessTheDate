@model IEnumerable<ApplicationUser>

@{ 
    ViewBag.Title = "List-Users";
}

<div class="container bg-info text-white text-center p-5 mt-5">
    <h1 class="display-6">Roles</h1>
    <div>
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Level</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Level</td>
                                <td><a class="btn btn-warning" asp-action="EditUser"><i class="bi bi-pen-fill"></i></a></td>
                                <td><a class="btn btn-danger" asp-action="DeleteUser"><i class="bi bi-trash-fill"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h3>No user created yet</h3>
            <p>Click <a asp-controller="Account" asp-action="Register">Here</a> to register a new user.</p>
        }
    </div>

    <div class="mt-3 mb-3">
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register new user</a>
    </div>
</div>